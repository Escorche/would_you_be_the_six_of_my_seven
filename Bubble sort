# Generar lista de 1000 nÃºmeros aleatorios
lista = [random.randint(0, 10000) for _ in range(1000)]

def bubble_sort(arr):
    a = arr.copy()
    n = len(a)
    for i in range(n):
        for j in range(0, n - i - 1):
            if a[j] > a[j + 1]:
                a[j], a[j + 1] = a[j + 1], a[j]
    return a

print("Lista original:")
print(lista)

lista_ordenada = bubble_sort(lista)

print("\nLista ordenada con Bubble Sort:")
print(lista_ordenada)
